# Backend Environment Variables - backend/.env
# Place this file INSIDE the backend/ directory

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///brainhr.db

# Admin Credentials
ADMIN_USERNAME=BHRadmin
ADMIN_PASSWORD=BHR@6789$

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

DEV_ALLOW_ALL_ORIGINS=true         # allow any origin for dev
# CORS Settings
FRONTEND_URL=http://localhost:3000

# Optional: Email Configuration (if you want to send emails)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=your-email@gmail.com